// Created on Mon March 23 2020

int motorl = 0;
int motorr = 2;
int middlerange = 1;
int rightrange = 2;

int main(){
	pivotr(); //As name suggests, pivots right
	treadlightly(); //Treads lightly straight down
	leftlineup(); //lines up with black line
	return 0;
}

void pivotr(){
	while(analog(rightrange) > 450){ //measures distance from wall for inital turn
	motor(motorl,100);
	//msleep(50);
	}
	printf("Finished Pivoting \n");
}

void treadlightly(){
	while(analog(middlerange) > 400){ // measures range from bottom wall
	motor(motorl,50);
	motor(motorr,50);
	//msleep(100);
	}
	printf("Finished Treading \n");
}

void leftlineup(){
	motor(motorr,100); // msleeps the left turn
	motor(motorl,-100);
	msleep(800);
	printf("Finished Turning \n");
}

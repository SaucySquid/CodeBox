int motorl = 0;
int motorr = 2;
int leftrange = 0;
int middlerange = 1;
int rightrange = 2;
int rightreflect = 6;
int leftreflect = 5;
int speedfast = 100;
int quickturn = 90;
int slowturn = 20;
int avgspeed = 50;
int linescrossed = 0;



int main(){
	shut_down_in(52); //Who needs counter variables? :P
	FollowWall(); //runs the wallfollow
	return 0;
}

void FollowWall(){
	
	while(1){
		
		if (analog(rightrange) < 400){ //if too close to wall...
			motor(motorr,quickturn);
			motor(motorl,slowturn);	//turn left
			msleep(5);
		}
		if (analog(rightrange) > 400){ //If too far from wall...
			motor(motorl,quickturn);
			motor(motorr,slowturn);	//turn right
			msleep(5);
		}
}
}
